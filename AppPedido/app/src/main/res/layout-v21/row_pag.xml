<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:padding="5dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="411dp"
        android:layout_height="90dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textNPedido"
            android:layout_width="214dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/textVencimento"
            app:layout_constraintEnd_toStartOf="@+id/textValorPag"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imglogopag"
            app:layout_constraintTop_toBottomOf="@+id/textClientePag" />

        <TextView
            android:id="@+id/textClientePag"
            android:layout_width="210dp"
            android:layout_height="28dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/textNPedido"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textValorPag"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imglogopag"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textValorPag"
            android:layout_width="85dp"
            android:layout_height="29dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textNPedido"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.508" />

        <TextView
            android:id="@+id/textVencimento"
            android:layout_width="213dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textValorPag"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imglogopag"
            app:layout_constraintTop_toBottomOf="@+id/textNPedido" />

        <ImageView
            android:id="@+id/imglogopag"
            android:layout_width="91dp"
            android:layout_height="71dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>